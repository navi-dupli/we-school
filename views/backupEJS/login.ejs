<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="../assets/paper_img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    
    <title>Plataforma de Gestión Educativa</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
         <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js">
      </script>
      <script src="https://apis.google.com/js/client:platform.js?onload=start" async defer>
      </script>
    <link href="bootstrap3/css/bootstrap.css" rel="stylesheet" />
    <link href="assets/css/ct-paper.css" rel="stylesheet"/>
    <link href="assets/css/demo.css" rel="stylesheet" /> 
    <link href="assets/css/examples.css" rel="stylesheet" /> 
        
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
      
</head>
<body>
    <nav class="navbar navbar-ct-transparent navbar-fixed-top" role="navigation-demo" id="register-navbar">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">LoBusqueLoEncontre</a>
        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->

      </div><!-- /.container-->
    </nav> 
    
    <div class="wrapper">
            <!-- show any messages that come back with authentication -->
      
        <div class="register-background"> 
            <div class="filter-black"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger alert-with-icon" data-notify="container">
                                <button type="button" aria-hidden="true" class="close">×</button>
                                <span data-notify="icon" class="pe-7s-bell"></span>
                                <span data-notify="message"><%= message %></span>
                            </div>
                        <% } %>
                            <div class="register-card">
                                <h3 class="title">Bienvenido</h3>
                                <form class="register-form" action="/login" method="post">
                                    <label>Email</label>
                                    <input type="text" class="form-control" name="email">
                                    <label>Contraseña</label>
                                    <input type="password" class="form-control" name="password">
                                    <button type="submit" class="btn btn-info btn-block">Iniciar Sesión</button>
                                </form>

                                <br>

                                <p>¿No tiene una cuenta? <a href="/signup">Registrarse</a></p>
                                <p>Volver al <a href="/">inicio</a></p>

                                <hr>
                                <p>Ingresar con</p>
                                <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
                                <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
                                <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>

                                <div class="forgot">
                                    <a href="#" class="btn btn-simple btn-info">¿Olvidó su contraseña? (Desactivado)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>     
           
        </div>
    </div>      

</body>

<script src="assets/js/jquery-1.10.2.js" type="text/javascript"></script>
