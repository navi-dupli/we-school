<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Perfil | We-learning</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <header class="main-header">
        <!-- Logo -->
        <a href="/" class="logo">
          <!-- mini logo for sidebar mini 50x50 pixels -->
          <span class="logo-mini">W-L</span>
          <!-- logo for regular state and mobile devices -->
          <span class="logo-lg"><img src="img/v-learning100.png"  alt="We-Learning" /></span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
          <!-- Sidebar toggle button-->
          <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
          </a>
          <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
              
              <!-- User Account: style can be found in dropdown.less -->
              <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <img src="<%= user.google.photo %>" class="user-image" alt="User Image">
                  <span class="hidden-xs">Google user: <%= user.google.name %></span>
                </a>
                <ul class="dropdown-menu">
                  <!-- User image -->
                  <li class="user-header">
                    <img src="<%= user.google.photo %>" class="img-circle" alt="User Image">
                    <p>Google user: <%= user.google.name %></p>
                  </li>

                  <!-- Menu Footer-->
                  <li class="user-footer">
                    <div class="pull-left">
                      <a href="/profile" class="btn btn-default btn-flat">Perfil</a>
                    </div>
                    <div class="pull-right">
                      <a href="/logout" class="btn btn-default btn-flat">Cerrar Sesión</a>
                    </div>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="<%= user.google.photo %>" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p>Hola, Google user: <%= user.google.name %></p>
            </div>
          </div>
          
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            
            <li class="header">MENÚ PRINCIPAL</li>

            <!--Panel de Control-->
            <li class="treeview">
              <a href="/dashboard">
                <i class="fa fa-dashboard"></i> <span>Panel de Control</span>
              </a>
            </li>

            {% if request.user.is_superuser %}
            <!--Registro-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-person-add"></i> <span>Registro</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Usuarios</a></li>
                <li><a href="/objects"><i class="fa fa-angle-double-right"></i> Cursos</a></li>
              </ul>
            </li>

            <!--Matriculas-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-bag"></i> <span>Matriculas</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Crear Estudiante</a></li>
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Buscar Estudiante</a></li>
              </ul>
            </li>
            {%endif%}

            <!--Pensum-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-compose"></i> <span>Pensum</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                {% if request.user.is_superuser %}
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Materia</a></li>
                {% if request.user.is_superuser %}
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Logro</a></li>
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Actividad</a></li>
              </ul>
            </li>

            <!--Control-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-stats-bars"></i><span>Control</span><i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Asistencia</a></li>
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Observador</a></li>
              </ul>
            </li>

            <!--Reportes-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-pie-graph"></i><span>Reportes</span><i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Notas</a></li>
              </ul>
            </li>

            {% if request.user.is_superuser %}
            <!--Configuración-->
            <li class="treeview">
              <a href="#">
                <i class="ion ion-gear-b"></i><span>Configuración</span><i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="#"><i class="fa fa-angle-double-right"></i> Identidad Institucional</a></li>
              </ul>
            </li>
            {%endif%}

          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Perfil de Usuario
          </h1>
        </section>

        <!-- Main content -->
        <section class="content">

          <div class="row">
            <div class="col-md-3">
              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <% if (typeof user.local.photo === "undefined") { %>
                  <img class="profile-user-img img-responsive img-circle" src="/img/avatar.png" alt="Imagen de perfil">
                  <% } else { %>
                  <img class="profile-user-img img-responsive img-circle" src="<%= user.local.photo %>" alt="Imagen de perfil">
                  <% } %>
                  <h3 class="profile-username text-center"><%= user.local.name %></h3>
                  <p class="text-muted text-center"><strong>Rol:</strong> <%= user.local.role %></p>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->

            <div class="col-md-3">
              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Acerca de</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i> Id de Usuario</strong>
                  <p class="text-muted">
                    <%= user._id %>
                  </p>
                  <strong><i class="fa fa-map-marker margin-r-5"></i> Email</strong>
                  <p class="text-muted"><%= user.local.email %></p>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Cursos a los que pertenece</strong>
                  
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->

            <div class="col-md-3">
              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Redes sociales</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <p><span class="fa fa-facebook"></span><strong> Facebook: </strong><br></p>
                  <% if (user.facebook.token) { %>
                    <a href="/unlink/facebook" class="btn btn-primary">Eliminar asociación</a>
                  <% } else { %>
                    <a href="/connect/facebook" class="btn btn-primary">Asociar</a>
                  <% } %>
                  <br>
                  <br>
                  <p><span class="fa fa-twitter"></span><strong> Twitter: </strong><br></p>
                  <% if (user.twitter.token) { %>
                    <a href="/unlink/twitter" class="btn btn-primary">Eliminar asociación</a>
                  <% } else { %>
                    <a href="/connect/twitter" class="btn btn-primary">Asociar</a>
                  <% } %>
                  <br>
                  <br>
                  <p><span class="fa fa-google-plus"></span><strong> Google: </strong><br></p>
                  <% if (user.google.token) { %>
                    <a href="/unlink/google" class="btn btn-primary">Eliminar asociación</a>
                  <% } else { %>
                    <a href="/connect/google" class="btn btn-primary">Asociar</a>
                  <% } %>
                  <br>

                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->

          </div><!-- /.row -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

      <!-- COPYRIGHT -->
      <footer class="main-footer">
        <strong>Copyright &copy; 2016 <a href="#">We-nnova</a>.</strong> Todos los derechos reservados.
        <div class="pull-right hidden-xs"><b>Versión</b> 1.0</div>
      </footer>

    </div><!-- ./wrapper -->

    <!-- jQuery 2.1.4 -->
    <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
  </body>
</html>